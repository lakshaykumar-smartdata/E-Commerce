{
  "ReverseProxy": {
    "Routes": {
      "user-service": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/user/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/user" }
        ]
      },
      "product-service": {
        "ClusterId": "product-cluster",
        "Match": {
          "Path": "/product/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/product" }
        ]
      },
      "order-service": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/order/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/order/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "user-cluster": {
        "Destinations": {
          "user-service": { "Address": "https://localhost:44308" }
        }
      },
      "product-cluster": {
        "Destinations": {
          "product-service": { "Address": "https://localhost:44357" }
        }
      },
      "order-cluster": {
        "Destinations": {
          "order-service": { "Address": "https://localhost:5003" }
        }
      }
    }
  }
}
