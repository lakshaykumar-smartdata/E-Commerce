{
  "ReverseProxy": {
    "Routes": {
      "user-service": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/user/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/user/{**catch-all}" }
        ]
      },
      "product-service": {
        "ClusterId": "product-cluster",
        "Match": {
          "Path": "/product/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/product/{**catch-all}" }
        ]
      },
      "order-service": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/order/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/order/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "user-cluster": {
        "Destinations": {
          "user-service": { "Address": "http://localhost:5001" }
        }
      },
      "product-cluster": {
        "Destinations": {
          "product-service": { "Address": "http://localhost:5002" }
        }
      },
      "order-cluster": {
        "Destinations": {
          "order-service": { "Address": "http://localhost:5003" }
        }
      }
    }
  }
}
